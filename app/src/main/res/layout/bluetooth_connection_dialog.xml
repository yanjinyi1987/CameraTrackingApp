<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/bt_paired_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="已配对设备"
        android:textSize="20sp"
        />

    <ListView
        android:id="@+id/bt_paried_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_paired_title"/>

    <TextView
        android:id="@+id/bt_discovered_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="发现设备"
        android:textSize="20sp"
        android:layout_below="@+id/bt_paried_list"/>

    <ListView
        android:id="@+id/bt_discovered_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_discovered_title"/>

    <Button
        android:id="@+id/refresh_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刷新"
        android:layout_below="@+id/bt_discovered_list"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/cancle_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出"
        android:layout_below="@+id/bt_discovered_list"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>